<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/scrollBg"
    android:paddingTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        style="@style/menu_entry_card">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:tag="entry_img"
                android:id="@+id/entry_img"
                style="@style/MainMenuImage"
                android:contentDescription="@string/main_menu" />

            <TextView
                android:tag="itemQuantity"
                style="@style/itemQuantity"
                android:background="@drawable/item_quantity"
                android:visibility="invisible"
                android:layout_alignEnd="@+id/entry_img"
                android:layout_alignTop="@+id/entry_img"/>

            <TextView
                android:id="@+id/itemPrice"
                android:tag="itemPrice"
                style="@style/itemPrice"
                android:layout_below="@+id/entry_img" />

            <TextView
                android:id="@+id/itemTitle"
                android:tag="itemTitle"
                style="@style/itemTitle"
                android:layout_below="@+id/itemPrice"/>


            <LinearLayout
                android:paddingTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/entry_img"
                android:orientation="horizontal">

                <ImageView
                    android:tag="itemRemove"
                    style="@style/itemAdd"
                    android:visibility="invisible"
                    android:src="@drawable/ic_remove_circle_black_24dp"/>

                <ImageView
                    android:tag="itemAdd"
                    style="@style/itemAdd"
                    android:src="@drawable/ic_add_circle_black_24dp"/>

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>