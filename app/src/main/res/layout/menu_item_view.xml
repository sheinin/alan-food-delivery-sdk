<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:tag="itemContainer"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/menu_item_container"
        style="@style/MainMenuWrapper">

        <ImageView
            android:tag="itemImg"
            android:id="@+id/itemImg"
            style="@style/MainMenuImage"
            android:contentDescription="@string/main_menu" />

        <TextView
            android:tag="itemQuantity"
            style="@style/itemQuantity"
            android:background="@drawable/item_quantity"
            android:visibility="invisible"
            android:layout_alignEnd="@+id/itemImg"
            android:layout_alignTop="@+id/itemImg"/>

        <TextView
            android:id="@+id/itemPrice"
            android:tag="itemPrice"
            style="@style/itemPrice"
            android:layout_below="@+id/itemImg" />

        <TextView
            android:id="@+id/itemTitle"
            android:tag="itemTitle"
            style="@style/itemTitle"
            android:layout_below="@+id/itemPrice"/>


        <LinearLayout
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/itemImg"
            android:orientation="horizontal">

            <ImageView
                android:tag="itemRemove"
                style="@style/itemAdd"
                android:visibility="invisible"
                android:src="@drawable/ic_remove_circle_black_24dp"/>

            <ImageView
                android:tag="itemAdd"
                style="@style/itemAdd"
                android:src="@drawable/ic_add_circle_black_24dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>