<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/info_bar_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false">

    <ImageView
        android:id="@+id/shop_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="7dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        android:layout_margin="5dp"
        android:src="@drawable/shop_off"
        android:contentDescription="@string/cart_label"
        android:background="@drawable/shop_bg"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/info_bar_container"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    </LinearLayout>

</LinearLayout>